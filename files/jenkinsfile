pipeline {
    agent any
    
        stages {
            stage ('cloning the code form github') {
                steps {
                    echo 'Cloning the Github repo'
                    git branch: 'main', url: 'https://github.com/jadhavmaheshkumar0807-maker/HelmProject.git'
                }
            }
            stage ('scanning the code with sonarqube') {
                steps {
                    echo 'Scanning the code for static analysis using SonarQube'
                    sh '''
                        cd mahesh-app
                        mvn sonar:sonar \
                        -Dsonar.host.url=http://18.233.200.116:9000/ \
                        -Dsonar.login=squ_ced4dbfe453917e0f04c2fe260bda9583084f5ed
                    '''
                }
            }
            stage ('building artifact with maven') {
                steps {
                    echo "building artifact with maven"
                    sh 'cd mahesh-app && mvn clean package'
                }
            }
            stage ('building docker image') {
                steps {
                    script {
                        echo 'building Docker image'
                        sh 'cd files && docker build -t maheshkumar010/mahesh:${BUILD_NUMBER} .'
                    }
                }
            }
            stage ('scanning the docker image') {
                steps {
                    echo 'Scaning the docker image with trivy'
                    sh 'trivy image maheshkumar010/mahesh:${BUILD_NUMBER}'
                }
            }
            stage ('pushing the image to docker hub') {
                steps {
                    script{
                        withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                            sh 'echo "${dockerhub}" | docker login -u maheshkumar010 --password-stdin'
                        }
                        sh 'docker push maheshkumar010/mahesh:${BUILD_NUMBER}'
                    }
                }

            }
            stage ('updating deployment manifest file') {
                environment {
                    GIT_USER_NAME = "jadhavmaheshkumar0807-maker"
                    GIT_REPO_NAME = "HelmProject"
                }
                steps {
                    withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) {
                        sh '''
                            git config user.name "Mahesh Kumar"
                            git config user.email "maheshkumar@gmail.com"
                            sed -i "s|mahesh:.*|mahesh:${BUILD_NUMBER}|g" helm/values.yaml
                            git add .
                            git commit -m "Updating the image tag with ${BUILD_NUMBER}"
                            git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                        '''

                    }
                }
            }
            stage ('deploying application in k8s using helm through Ansible') {
                steps {
                    script {
                        ansiblePlaybook(
                            credentialsId: "ssh",
                            disableHostKeyChecking: true,
                            installation: 'ansible',
                            inventory: '/etc/ansible/inventory',
                            playbook: 'files/Ansible_helm_playbook.yaml'
                        )
                    }
                }
            }
        
    }
}
